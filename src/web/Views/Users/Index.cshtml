@model IEnumerable<wwwplatform.Models.ApplicationUser>

@{
    ViewBag.Title = "Manage Users";
}

<h2>@ViewBag.Title</h2>

<section class="h3 text-right">
    <div class="btn-group">
        @Html.ActionLink("Create User", "Create", null, new { @class = "btn btn-default" })
        @Html.ActionLink("Manage Roles", "Index", "Roles", routeValues: null, htmlAttributes: new { @class = "btn btn-default" })
        @Html.ActionLink("Your Account", "Index", "Manage", null, new { @class = "btn btn-default" })
    </div>
</section>
<section class="margin-bottom-40">
    <table class="table table-striped auto-datatable clickable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    User Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    Phone Number
                </th>
                <th class="disable-sorting"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-href="/Users/Details/@item.Id">
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.Partial("_TableActionButtons", item)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
