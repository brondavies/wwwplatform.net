@using wwwplatform.Extensions.Helpers.Bootstrap;

@model wwwplatform.Models.SitePage

@{
    ViewBag.Title = "Page Details - " + Model.Name;
    var columns = new[] { new { sm = 4 }, new { sm = 8 } };
}

<h2>Page Details</h2>

<div>
    @Html.Row(columns
        ).Column(
        ).Add(
        @<h4 class="no-margin">
            @Model.Name
        </h4>
        ).Column(htmlAttributes: new { @class = "text-right" }
        ).Add(@<div class="btn-group">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Make a Copy", "Copy", new { Model.Id }, new { @class = "btn btn-default" })
            </div>
        ).Add(
            Html.ActionLink("Cancel", "Index")
        )
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Order)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PubDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PubDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HTMLBody)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HTMLBody)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UpdatedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UpdatedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

    </dl>
</div>
