@model wwwplatform.Models.MailingListSubscriber

@{
    ViewBag.Title = "Unsubscribe";
}

<h2>@ViewBag.Title</h2>
<section class="margin-bottom-40">
    <div class="row">
        <div class="well col-sm-6 col-sm-offset-3">
            <h4 class="text-center">Are you sure you want to unsubscribe @(Model.FullName()) from @(Model.MailingList.Name)?</h4>
            <hr />
            <h5 class="text-center">To unsubscribe from all lists, enter your email address</h5>
            @using (Html.BeginForm())
            {
                @SimpleAntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <input type="submit" value="Unsubscribe" class="btn btn-danger" />
                        @Html.ActionLink("Cancel", "Index", "Home")
                    </div>
                </div>
            }
        </div>
    </div>
</section>

