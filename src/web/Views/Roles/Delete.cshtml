@using wwwplatform.Extensions.Helpers.Bootstrap;

@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete Role - " + Model.Name;
    var columns = new[] { new { sm = 4 }, new { sm = 8 } };
    var labelAttributes = new { @class = "text-right" };
    var label = "label";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @SimpleAntiForgeryToken()

    <div class="form-horizontal">
        @Html.Row(columns.Reverse()
         ).Column(
         ).Add(
    @<h4>Are you sure you want to delete this role?</h4>
         ).Column(htmlAttributes: new { @class = "text-right" }
         ).Add(@<span>
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "Index")
        </span>
         )
        <hr />
        @Html.HiddenFor(model => model.Id)

        @Html.Row(columns
         ).Column(label, labelAttributes
             ).Add(Html.DisplayNameFor(model => model.Name)
         ).Column(
             ).Add(Html.DisplayFor(model => model.Name))

        @Html.Row(columns
         ).Column(label, labelAttributes
             ).Add("Users in role"
         ).Column(
             ).Add(Model.Users.Count)

    </div>
}